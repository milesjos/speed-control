{
  "manifest_version": 3,

  "name": "Speed Control",
  "description": "Control the speed of HTML5 video",
  "version": "2.0.0",
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "icons": {
    "128": "icon.png"
  }
}
